<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"

    tools:context="person.jack.plant.activity.PlantsDetailActivity">

    <include layout="@layout/layout_main_header"
        android:id="@+id/title"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@color/gray_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_plant"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/csy_form"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_image" />

            <!-- 表单 -->
            <LinearLayout
                android:id="@+id/details_form1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_plant"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"

                android:background="@drawable/csy_form"
                android:orientation="vertical"
                android:padding="@dimen/space_5">

                <LinearLayout
                    style="@style/csy_row"
                    android:layout_height="@dimen/space_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="车矢菊"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/csy_row1"
                    android:layout_height="@dimen/csy_btn_h">

                    <TextView
                        style="@style/csy_row_label"
                        android:layout_width="100dp"
                        android:text="种植时间" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"

                            android:text="2018-03-02" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/csy_row1"
                    android:layout_height="@dimen/csy_btn_h">

                    <TextView
                        style="@style/csy_row_label"
                        android:layout_width="100dp"
                        android:text="当前生长状态" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_state"
                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="结果了" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/plant_add_form"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:id="@+id/btn_plantUpdate"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_margin="@dimen/space_5"
                        android:background="@drawable/csy_btn"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="更新植物"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/csy_text_ts"
                        />
                    <Button
                        android:id="@+id/btn_plantDelete"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_margin="@dimen/space_5"
                        android:background="@drawable/csy_btn"
                        android:gravity="center"
                        android:text="删除植物"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/csy_text_ts"
                        />

                </LinearLayout>


            </LinearLayout>
            <!--j结束-->
            <!-- 表单 -->
            <LinearLayout
                android:id="@+id/details_form2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_form1"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_marginTop="@dimen/csy_pd"
                android:background="@drawable/csy_form"
                android:orientation="vertical"
                android:padding="@dimen/space_5">

                <LinearLayout
                    style="@style/csy_row"
                    android:layout_height="@dimen/space_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:layout_gravity="center_vertical">

                        <TextView

                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="当前环境信息"

                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/csy_row1"
                    android:layout_height="@dimen/csy_btn_h">

                    <TextView
                        style="@style/csy_row_label"
                        android:layout_width="100dp"
                        android:text="温度：" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_detail_temp"
                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="15℃" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/csy_row1"
                    android:layout_height="@dimen/csy_btn_h">

                    <TextView
                        style="@style/csy_row_label"
                        android:layout_width="100dp"
                        android:text="湿度：" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_detail_hum"
                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="60%" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/csy_row1"
                    android:layout_height="@dimen/csy_btn_h">


                    <TextView
                        style="@style/csy_row_label"
                        android:layout_width="100dp"
                        android:text="光照强度：" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/csy_tip_h"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_detail_lig"
                            style="@style/csy_textbox"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="1000" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <!--j结束-->
            <WebView
                android:id="@+id/web_view"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/details_form2"
                android:orientation="vertical"></WebView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

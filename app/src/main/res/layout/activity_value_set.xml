<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="person.jack.plant.activity.ValueSetActivity">

    <include layout="@layout/layout_main_header" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/csy_form"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/csy_row_label"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最小值"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最大值"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:text="温度阈值"
                style="@style/csy_row_label"
                />

            <EditText
                android:id="@+id/et_temMin"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
            <EditText
                android:id="@+id/et_temMax"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/csy_row_label"
                android:text="湿度阈值"

                />

            <EditText
                android:id="@+id/et_humMin"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
            <EditText
                android:id="@+id/et_humMax"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/csy_row_label"
                android:text="光照阈值"

                />

            <EditText
                android:id="@+id/et_lightMin"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
            <EditText
                android:id="@+id/et_lightMax"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="氮    阈值"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_nitrogenMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
            <EditText
                android:id="@+id/et_nitrogenMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="磷   阈值"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_phosphorMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
            <EditText
                android:id="@+id/et_phosphorMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="钾    阈值"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/et_potassiumMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
            <EditText
                android:id="@+id/et_potassiumMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_back"
                />
        </LinearLayout>
    </LinearLayout>
    <Button

        android:id="@+id/btn_save"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/csy_btn_h"
        android:layout_below="@+id/cx_form"
        android:layout_margin="@dimen/space_5"
        android:background="@drawable/csy_btn"
        android:gravity="center"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="@dimen/csy_text_ts"

        />
</LinearLayout>
